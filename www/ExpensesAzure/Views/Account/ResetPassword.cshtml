@model SocialApps.Models.ResetPasswordViewModel
@{
	ViewBag.Title = SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("AccountResetPassword");
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";    
}

@* ReSharper disable UnknownCssClass *@
<div class="panel panel-primary">
    <div class="panel-heading">
        <table style="width: 100%;">
            <tbody>
                <tr>
                    <td>
						@Html.Partial("TopHomeButton")
                    </td>
                    <td style="width: 100%; text-align: center;">
                        @Html.Raw(ViewBag.Title)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("ResetPassword", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4>@Html.Raw(ViewBag.Title)</h4>
            <hr />
            @Html.ValidationSummary("", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.Code)
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("Email"), new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("Password"), new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("AccountConfirmPassword"), new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="@Html.Raw(SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("Reset"))" />
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
    <div class="panel-footer">
        <div class="btn-group" role="group">
			@Html.Partial("BottomHomeButton")
        </div>
    </div>
</div>
@* ReSharper restore UnknownCssClass *@
