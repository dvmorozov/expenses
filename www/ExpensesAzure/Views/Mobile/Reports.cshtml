@{
	ViewBag.Title = Resources.Resources.ReportsTitle;
	Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

@* ReSharper disable UnknownCssClass *@
<div class="panel panel-primary">
	<div class="panel-heading">
		<table style="width: 100%;">
			<tbody>
				<tr>
					<td style="width: 1%;">
						<div style="white-space: nowrap;">
							@Html.Partial("TopHomeButton")
						</div>
					</td>
					<td>
						<div id="ellipsisOwner">
							<div class="ellipsisInner" id="ellipsisInner">
								<span class="ellipsis">
									@Html.Raw((string)ViewBag.Title)
								</span>
							</div>
						</div>
					</td>
					<td style="width: 1%;">
					</td>
				</tr>
			</tbody>
		</table>
	</div>
	<div class="panel-body">
		<ul class="nav nav-pills nav-stacked">
			<li role="presentation">@Html.ActionLink(Resources.Resources.ReportTop10Categories, "Top10", "Mobile")</li>
			<li role="presentation">@Html.ActionLink(Resources.Resources.ReportImportance, "Importance", "Mobile")</li>
			<li role="presentation">@Html.ActionLink(Resources.Resources.ReportBalance, "Balance", "Mobile", new { lastMonthNumber = 12 }, null)</li>
			<li role="presentation">@Html.ActionLink(Resources.Resources.ReportTrendOverall, "Trend", "Mobile", new { lastMonthNumber = 12 }, null)</li>
			<li role="presentation">@Html.ActionLink(Resources.Resources.ReportTrendByCategory, "TrendByCategory", "Mobile", new { lastMonthNumber = 12 }, null)</li>
		</ul>
	</div>
	@Html.Partial("Tags")
</div>
@* ReSharper restore UnknownCssClass *@
