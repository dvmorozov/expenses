@model SocialApps.Models.SendCodeViewModel
@{
	ViewBag.Title = SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("AccountSendCodeTitle");
    Layout = "~/Views/Shared/_LayoutMobile.cshtml";
}

@* ReSharper disable UnknownCssClass *@
<div class="panel panel-primary">
    <div class="panel-heading">
        <table style="width: 100%;">
            <tbody>
                <tr>
                    <td>
						@Html.Partial("TopHomeButton")
                    </td>
                    <td style="width: 100%; text-align: center;">
                        @Html.Raw(ViewBag.Title)
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="panel-body">
        @using (Html.BeginForm("SendCode", "Account", new { ReturnUrl = Model.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("rememberMe", @Model.RememberMe)
            <h4>@Html.Raw(ViewBag.Title)</h4>
            <hr />
            <div class="row">
                <div class="col-md-8">
                    @Html.Raw(SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("AccountSelectProvider"))
                    @Html.DropDownListFor(model => model.SelectedProvider, Model.Providers)
					<input type="submit" value="@Html.Raw(SocialApps.Repositories.MobileRepository.GetLocalizedResourceString("Send"))" class="btn btn-default" />
                </div>
            </div>
        }

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
        }
    </div>
    <div class="panel-footer">
        <div class="btn-group" role="group">
			@Html.Partial("BottomHomeButton")
        </div>
    </div>
</div>
@* ReSharper restore UnknownCssClass *@
